{
    "compilerOptions": {
        "outDir": "./lib",
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "strict": true
    },
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "excludeExternals": true,
        "excludeNotExported": true,
        "excludePrivate": true
    },
    "include": [
        "src/**/*"
    ]
}